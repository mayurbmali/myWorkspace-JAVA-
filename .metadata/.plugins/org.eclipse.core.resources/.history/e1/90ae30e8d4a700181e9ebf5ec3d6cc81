package Arrays;

import java.util.Scanner;
public class rearrangeArrayinMaxMin_44 {
	public static Scanner s = new Scanner(System.in);
	public static void main(String[] args) {
		// TODO Auto-generated method stub
//		int N = scn.nextInt();
//		int k = scn.nextInt();
//		int arr[] = new int[N];
//		for (int i = 0; i < N; i++) {
//			arr[i] = scn.nextInt();
//		}
		 
	        int test = s.nextInt();
	        for(int i=0;i<test;i++)// Reading input from STDIN
	        {
	            long sum = s.nextLong();
	            sum=sum*2;
	            long d = 1 - (4*sum); 
	            long res=0L;
	            long root1 = (-1+(long)Math.sqrt(d))/2;
	            long root2 = (-1-(long)Math.sqrt(d))/2;
	            System.out.println(root1 +"  "+root2);
	            if(root1>0 && root1!=root2){
	                res=root1;
	            }
	            else if(root2>0 && root1!=root2){
	                res=root2;
	            }
	            else if(root1==root2){
	                res=root1;
	            }
	            if(res%2==0){
	                System.out.println("B");        
	            }else{
	                System.out.println("A");
	            }
	    
	        }
}

