package Arrays;

import java.util.Scanner;

public class countInversions {
	public static Scanner scn = new Scanner(System.in);

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// int n = scn.nextInt();
		// int arr[] = new int[n];
		// for (int i = 0; i < n; i++) {
		// arr[i] = scn.nextInt();
		// }
		int arr[] = { 1, 20, 6, 4, 5 };
		int n = arr.length;
		System.out.println(inversions(arr, 0, n - 1));

	}

	public static int inversions(int arr[], int low, int high) {
		int result = 0;
		while (high > low) {
			int mid = (low + high) / 2;
			int left = inversions(arr, low, mid);
			int right = inversions(arr, mid + 1, high);
			int inv = merge(arr, low, mid, high);
			result = left + right + inv;
		}
		return result;
	}

	public static int merge(int arr[], int low, int mid, int high) {
		int count = 0, idx = 0, l = low, m = mid + 1;
		int temp[] = new int[high - low + 1];
		while (l <= mid && m <= high) {
			if (arr[l] <= arr[m]) {
				temp[idx] = arr[l];
				idx++;
				l++;
			} else {
				temp[idx] = arr[m];
				count += (m - l + 1);
				idx++;
				m++;
			}
		}
		while (l <= mid) {
			temp[idx] = arr[l];
			idx++;
			l++;
		}
		while (m <= high) {
			temp[idx] = arr[m];
			idx++;
			m++;
		}
		return count;
	}

}